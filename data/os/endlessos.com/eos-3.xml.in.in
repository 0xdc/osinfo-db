<libosinfo version="0.0.1">
<!-- Licensed under the GNU General Public License version 2 or later.
     See http://www.gnu.org/licenses/ for a copy of the license text -->
  <os id="http://endlessos.com/eos/{{ current_series }}">
    <short-id>{{ image.branch }}</short-id>
    <_name>Endless OS {{ current_series }}</_name>
    <version>{{ current_series }}</version>
    <_vendor>Endless Mobile, Inc</_vendor>
    <family>linux</family>
    <distro>eos</distro>
{% if previous_series %}
    <upgrades id="http://endlessos.com/eos/{{ previous_series }}"/>
    <derives-from id="http://endlessos.com/eos/{{ previous_series }}"/>
{% endif %}
    <release-date>{{ release_date }}</release-date>
{% if eol_date %}
    <eol-date>{{ eol_date }}</eol-date>
{% endif %}
{% for personality, images in image.personality_images.items() %}
    <variant id="{{ personality }}">
      <_name>Endless OS {{ personality | personality_name }}</_name>
    </variant>

    <media arch="x86_64" live="true">
      <variant id="{{ personality }}"/>
      <url>{{ base_url }}/{{ images.iso.file }}</url>
      <iso>
        <volume-id>Endless-OS-{{ current_series | replace(".", "-") }}-\d+-{{ personality }}$</volume-id>
        <publisher-id>ENDLESS COMPUTERS</publisher-id>
      </iso>
    </media>
{% endfor %}
{% for personality in retired_personalities %}
    <variant id="{{ personality }}">
      <_name>Endless OS {{ personality | personality_name }}</_name>
    </variant>

    <media arch="x86_64" live="true">
      <variant id="{{ personality }}"/>
      <iso>
        <volume-id>Endless-OS-{{ current_series | replace(".", "-") }}-\d+-{{ personality }}$</volume-id>
        <publisher-id>ENDLESS COMPUTERS</publisher-id>
      </iso>
    </media>
{% endfor %}

    <resources arch="all">
      <minimum>
        <n-cpus>1</n-cpus>
        <cpu>1000000000</cpu>
        <ram>2147483648</ram>
        <storage>21474836480</storage>
      </minimum>

      <recommended>
        <ram>2147483648</ram>
        <storage>42949672960</storage>
      </recommended>
    </resources>

  </os>
</libosinfo>
